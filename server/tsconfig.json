{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "baseUrl": "./",
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "outDir": "build",
    "sourceMap": false,
    "declaration": false
  },
  "include": ["src"]
}
